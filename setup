#!/bin/bash

set -u
set -e

. "$plugin_dir/functions"

# Creates the base of the app
create_app_skel
init_vars
parse_envfile

# Installs everything
install_libs \
"lib/php-5.4.11;php \
lib/httpd-2.4.3;httpd"

# Write configuration
config_php
config_httpd

# Installs app and prepares start
install_app
write_control