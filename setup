#!/bin/bash

set -u
set -e

. "$plugin_dir/functions"

# Creates the base of the app
create_app_skel
init_vars
parse_envfile

# Installs everything
install_lib "lib/php-5.4.11;php"
install_lib "lib/httpd-2.4.3;httpd"
install_lib "lib/mysql-c-6.0.2;mysql"

# Write configuration
config_php
config_httpd

# Installs app and prepares start
install_app
write_control