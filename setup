set -u
set -e

. "$plugin_dir/php/functions"

# Creates the base of the app
create_app_skel
init_vars
parse_envfile

# Installs everything
install_libs \
"php/lib/php-5.4.11;php \
php/lib/httpd-2.4.3;httpd \
php/lib/newrelic-php-3.1.5.137;newrelic-php"

# Write configuration
config_php
config_httpd
config_newrelic

# Installs app and prepares start
install_app
write_control